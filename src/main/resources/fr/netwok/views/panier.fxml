<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="fr.netwok.controller.PanierController"
      styleClass="root-container"
      stylesheets="@../css/styles.css"
      spacing="0">

    <!-- Header -->
    <HBox styleClass="header" alignment="CENTER_LEFT" spacing="15">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>
        
        <Button fx:id="btnRetour" text="← Retour" styleClass="btn-retour" onAction="#retourCatalogue"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Label text="Récapitulatif de commande" styleClass="header-title"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Label text="" style="-fx-min-width: 200px;"/> <!-- Spacer pour équilibrer -->
    </HBox>

    <!-- Contenu principal -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-container">
        <VBox spacing="30" styleClass="panier-container">
            <padding>
                <Insets top="40" right="80" bottom="40" left="80"/>
            </padding>
            
            <!-- Section Articles -->
            <VBox spacing="20" styleClass="panier-section">
                <HBox styleClass="panier-header">
                    <Label text="Article" styleClass="panier-header-label" HBox.hgrow="ALWAYS"/>
                    <Label text="Qté" styleClass="panier-header-label" style="-fx-min-width: 80px; -fx-alignment: center;"/>
                    <Label text="Prix" styleClass="panier-header-label" style="-fx-min-width: 100px; -fx-alignment: center-right;"/>
                    <Label text="Total" styleClass="panier-header-label" style="-fx-min-width: 120px; -fx-alignment: center-right;"/>
                    <Label text="" styleClass="panier-header-label" style="-fx-min-width: 50px;"/> <!-- Pour le bouton supprimer -->
                </HBox>
                
                <Separator styleClass="panier-separator"/>
                
                <!-- Liste des articles (sera remplie dynamiquement) -->
                <VBox fx:id="vboxArticles" spacing="15"/>
            </VBox>
            
            <!-- Section Totaux -->
            <VBox spacing="15" styleClass="totaux-section">
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Label text="Sous-total :" styleClass="total-label"/>
                    <Label fx:id="lblSousTotal" text="0,00$" styleClass="total-value"/>
                </HBox>
                
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Label text="Taxes (15%) :" styleClass="total-label"/>
                    <Label fx:id="lblTaxes" text="0,00$" styleClass="total-value"/>
                </HBox>
                
                <Separator styleClass="panier-separator-bold"/>
                
                <HBox alignment="CENTER_RIGHT" spacing="20" styleClass="total-final-box">
                    <Label text="TOTAL :" styleClass="total-final-label"/>
                    <Label fx:id="lblTotalFinal" text="0,00$" styleClass="total-final-value"/>
                </HBox>
            </VBox>
            
            <!-- Champ Table / Client -->
            <HBox spacing="30" styleClass="client-section">
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="Numéro de table :" styleClass="client-label"/>
                    <TextField fx:id="txtNumeroTable" promptText="Ex: 12" 
                              styleClass="client-input"/>
                </VBox>
                
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="Nom du client (optionnel) :" styleClass="client-label"/>
                    <TextField fx:id="txtNomClient" promptText="Ex: Martin Dupont" 
                              styleClass="client-input"/>
                </VBox>
            </HBox>
            
            <!-- Boutons d'action -->
            <HBox alignment="CENTER" spacing="30" styleClass="actions-section">
                <Button text="← Modifier" styleClass="btn-modifier" onAction="#retourCatalogue"/>
                <Button fx:id="btnConfirmer" text="Confirmer la commande" 
                        styleClass="btn-confirmer" onAction="#confirmerCommande"/>
            </HBox>
            
            <!-- Message d'information -->
            <Label text="Un numéro de commande sera attribué après confirmation" 
                   styleClass="info-message"/>
        </VBox>
    </ScrollPane>
</VBox>