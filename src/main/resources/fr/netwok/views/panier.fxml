<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.netwok.controller.PanierController"
      styleClass="root-container"
      stylesheets="@../css/styles.css"
      spacing="0">

    <HBox styleClass="header" alignment="CENTER_LEFT" spacing="15">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>
        <Button fx:id="btnRetour" text="← Retour" styleClass="btn-retour" onAction="#retourCatalogue"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblTitreRecap" text="Récapitulatif de commande" styleClass="header-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="" style="-fx-min-width: 200px;"/>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-container">
        <VBox spacing="30" styleClass="panier-container">
            <padding>
                <Insets top="40" right="80" bottom="40" left="80"/>
            </padding>

            <VBox spacing="20" styleClass="panier-section">
                <HBox styleClass="panier-header" spacing="20">
                    <Label fx:id="colArticle" text="Article" styleClass="panier-header-label" style="-fx-min-width: 430px;"/>
                    <Label fx:id="colQuantite" text="Quantité" styleClass="panier-header-label" style="-fx-min-width: 130px; -fx-alignment: center;"/>
                    <Label fx:id="colPrix" text="Prix Unit." styleClass="panier-header-label" style="-fx-min-width: 100px; -fx-alignment: center-right;"/>
                    <Label fx:id="colTotal" text="Total" styleClass="panier-header-label" style="-fx-min-width: 120px; -fx-alignment: center-right;"/>
                    <Label text="" styleClass="panier-header-label" style="-fx-min-width: 50px;"/>
                </HBox>
                <Separator styleClass="panier-separator"/>
                <VBox fx:id="vboxArticles" spacing="15"/>
            </VBox>

            <VBox spacing="15" styleClass="totaux-section">
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Label fx:id="lblTxtSousTotal" text="Sous-total :" styleClass="total-label"/>
                    <Label fx:id="lblSousTotal" text="0,00$" styleClass="total-value"/>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Label fx:id="lblTxtTaxes" text="Taxes (15%) :" styleClass="total-label"/>
                    <Label fx:id="lblTaxes" text="0,00$" styleClass="total-value"/>
                </HBox>
                <Separator styleClass="panier-separator-bold"/>
                <HBox alignment="CENTER_RIGHT" spacing="20" styleClass="total-final-box">
                    <Label fx:id="lblTotalFinaltxt" text="TOTAL :" styleClass="total-final-label"/>
                    <Label fx:id="lblTotalFinal" text="0,00$" styleClass="total-final-value"/>
                </HBox>
            </VBox>

            <HBox spacing="30" styleClass="client-section">
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label fx:id="lblTxtTable" text="Numéro de table :" styleClass="client-label"/>
                    <TextField fx:id="txtNumeroTable" promptText="Ex: 12" styleClass="client-input"/>
                </VBox>
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label fx:id="lblTxtNom" text="Nom du client (optionnel) :" styleClass="client-label"/>
                    <TextField fx:id="txtNomClient" promptText="Ex: Martin" styleClass="client-input"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER" spacing="30" styleClass="actions-section">
                <Button fx:id="btnModifier" text="← Modifier" styleClass="btn-modifier" onAction="#retourCatalogue"/>
                <Button fx:id="btnConfirmer" text="Confirmer la commande" styleClass="btn-confirmer" onAction="#confirmerCommande"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button text="FR" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="EN" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="中文" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="日本語" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="ES" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="PY" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="ไทย" onAction="#changeLanguage" styleClass="btn-round"/>
                <Button text="한국말" onAction="#changeLanguage" styleClass="btn-round"/>
                <Label fx:id="languageDisplay" text="Langue : FR" style="-fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>