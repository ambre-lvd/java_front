<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<BorderPane fx:id="rootPane" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.netwok.controller.CatalogueController">

    <top>
        <StackPane>
            <VBox alignment="CENTER" spacing="20.0" styleClass="tab-bar-container" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" top="20.0" />
                </padding>

                <HBox alignment="CENTER" spacing="15.0">
                    <Label styleClass="titre-app" text="NetWok">
                        <font>
                            <Font size="48.0" />
                        </font>
                    </Label>
                </HBox>

                <HBox alignment="CENTER" spacing="30.0">
                    <ToggleButton fx:id="tabEntrees" onAction="#filtrerEntrees" selected="true" styleClass="btn-tab" text="ENTRÉES">
                        <toggleGroup>
                            <ToggleGroup fx:id="groupeCategories" />
                        </toggleGroup>
                    </ToggleButton>
                    <ToggleButton fx:id="tabPlats" onAction="#filtrerPlats" styleClass="btn-tab" text="PLATS" toggleGroup="$groupeCategories" />
                    <ToggleButton fx:id="tabDesserts" onAction="#filtrerDesserts" styleClass="btn-tab" text="DESSERTS / BOISSONS" toggleGroup="$groupeCategories" />
                </HBox>

                <HBox fx:id="sousCategorieBar" alignment="CENTER" spacing="20.0" visible="false" managed="false">
                    <ToggleButton fx:id="tabAllDesserts" onAction="#filtrerAllDessertsBoissons" styleClass="btn-tab" text="TOUT" selected="true">
                        <toggleGroup>
                            <ToggleGroup fx:id="groupeSousCategories" />
                        </toggleGroup>
                    </ToggleButton>
                    <ToggleButton fx:id="tabDessertsOnly" onAction="#filtrerDessertsOnly" styleClass="btn-tab" text="DESSERTS" toggleGroup="$groupeSousCategories" />
                    <ToggleButton fx:id="tabBoissonsOnly" onAction="#filtrerBoissonsOnly" styleClass="btn-tab" text="BOISSONS" toggleGroup="$groupeSousCategories" />
                </HBox>

                <Label fx:id="sectionTitle" text="" visible="false" managed="false">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <styleClass>
                        <String fx:value="section-title" />
                    </styleClass>
                </Label>
            </VBox>
            <HBox alignment="TOP_LEFT" mouseTransparent="true">
                <padding>
                    <Insets left="30.0" top="20.0" />
                </padding>
                <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo_main.png" />
                    </image>
                    <effect>
                        <Glow level="0.8" />
                    </effect>
                </ImageView>
            </HBox>
        </StackPane>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER">
            <content>
                <FlowPane fx:id="gridPlats" alignment="TOP_CENTER" hgap="30.0" vgap="30.0">
                    <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="barre-panier" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <VBox>
                <Label fx:id="lblMonPanierTitre" text="MON PANIER" textFill="#94a3b8">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <Label fx:id="lblNbArticles" text="0 articles" textFill="WHITE">
                    <font><Font size="18.0" /></font>
                </Label>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="lblTotaltxt" text="TOTAL :" textFill="#94a3b8">
                <font><Font size="24.0" /></font>
            </Label>
            <Label fx:id="lblTotal" text="0.00 €" textFill="#00f0ff">
                <font><Font name="System Bold" size="36.0" /></font>
                <effect>
                    <Glow level="0.5" />
                </effect>
            </Label>

            <Button fx:id="btnVoirPanier" onAction="#voirPanier" styleClass="btn-action" text="VOIR PANIER &gt;">
                <font><Font size="20.0" /></font>
                <HBox.margin>
                    <Insets left="30.0" />
                </HBox.margin>
            </Button>
            <Label fx:id="languageDisplay" style="-fx-text-fill: white;"/>

            <Button alignment="CENTER" mnemonicParsing="false" text="FR" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/fr.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat;-fx-background-position: center;-fx-background-radius: 25;-fx-border-radius: 25;-fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0';-fx-text-fill: white; -fx-font-weight: bold;-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 3, 0, 0, 0);"/>
            <Button alignment="CENTER" mnemonicParsing="false" text="EN" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/gb.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="中文" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/cn.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="日本語" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/jp.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="ES" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/es.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="PY" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/ru.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="ไทย" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/th.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="한국말" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/kr.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
        </HBox>
    </bottom>
</BorderPane>