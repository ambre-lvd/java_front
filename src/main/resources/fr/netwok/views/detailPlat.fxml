<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="0" styleClass="root-container" stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="fr.netwok.controller.DetailPlatController">

    <fx:define>
        <ToggleGroup fx:id="epice" />
        <ToggleGroup fx:id="accompagnement" />
    </fx:define>

    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header">
        <padding>
            <Insets bottom="20" left="30" right="30" top="20" />
        </padding>
        <Button fx:id="btnRetour" onAction="#retourCatalogue" styleClass="btn-retour" text="← Retour" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="detail" styleClass="header-title" text="Détails du plat" />
        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="15">
            <Button fx:id="btnVoirPanier" onAction="#voirPanier" styleClass="btn-panier-header" text="Voir le Panier" />
        </HBox>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="main-scrollpane" VBox.vgrow="ALWAYS">
        <VBox spacing="30" styleClass="content-padding">
            <padding>
                <Insets bottom="40" left="50" right="50" top="30" />
            </padding>

            <HBox spacing="40">
                <VBox styleClass="image-container-detail">
                    <ImageView fx:id="imgPlat" fitHeight="350.0" fitWidth="450.0" preserveRatio="true" />
                </VBox>

                <VBox spacing="25" HBox.hgrow="ALWAYS">
                    <VBox spacing="5">
                        <Label fx:id="lblNom" styleClass="detail-name" text="Nom du Plat" />
                        <Label fx:id="lblPrix" styleClass="detail-price" text="0.00€" />
                    </VBox>

                    <VBox spacing="10">
                        <Label fx:id="desc" styleClass="section-title" text="Description" />
                        <Text fx:id="txtDescription" styleClass="detail-description" text="..." wrappingWidth="400.0" />
                    </VBox>

                    <VBox spacing="10">
                        <Label fx:id="info" styleClass="section-title" text="Informations" />
                        <Text fx:id="txtInfos" styleClass="detail-info" text="..." wrappingWidth="400.0" />
                    </VBox>

                    <Label fx:id="opt" styleClass="section-title" text="OPTIONS" />

                    <VBox fx:id="vboxOptionsPiment" spacing="10">
                        <Label fx:id="epices" styleClass="option-title" text="Niveau de piment" />
                        <HBox spacing="20">
                            <RadioButton fx:id="rbDoux" selected="true" styleClass="radio-custom" text="Doux" toggleGroup="$epice" />
                            <RadioButton fx:id="rbMoyen" styleClass="radio-custom" text="Moyen" toggleGroup="$epice" />
                            <RadioButton fx:id="rbFort" styleClass="radio-custom" text="Fort" toggleGroup="$epice" />
                        </HBox>
                    </VBox>

                    <VBox fx:id="vboxOptionsAccompagnement" spacing="10">
                        <Label fx:id="acc" text="Accompagnement" styleClass="option-title"/>
                        <HBox spacing="20">
                            <RadioButton fx:id="rbRiz" text="Riz" toggleGroup="$accompagnement" selected="true" />
                            <RadioButton fx:id="rbNouilles" text="Nouilles" toggleGroup="$accompagnement" />
                        </HBox>
                    </VBox>

                    <VBox spacing="10">
                        <Label fx:id="qt" styleClass="option-title" text="Quantité" />
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Button fx:id="btnMoins" onAction="#diminuerQuantite" styleClass="btn-quantity" text="-" />
                            <Label fx:id="lblQuantite" styleClass="quantity-label" text="1" />
                            <Button fx:id="btnPlus" onAction="#augmenterQuantite" styleClass="btn-quantity" text="+" />
                        </HBox>
                    </VBox>

                    <Button fx:id="btnAjouter" maxWidth="Infinity" onAction="#ajouterAuPanier" styleClass="btn-ajouter-panier" text="Ajouter au panier" />
                </VBox>

                <VBox alignment="CENTER" spacing="10">
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="FR" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="EN" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="ZH" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="JA" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="ES" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="RU" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="TH" />
                    <Button onAction="#changeLanguage" styleClass="btn-round" text="KO" />
                </VBox>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>