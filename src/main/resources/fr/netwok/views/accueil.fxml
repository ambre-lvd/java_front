<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<BorderPane fx:id="rootPane"
            styleClass="root"
            stylesheets="@../css/styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.netwok.controller.AccueilController">

    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            
            <ImageView fitHeight="375.0" fitWidth="375.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/logo_main.png" />
                </image>
                <effect>
                    <Glow level="0.6" />
                </effect>
            </ImageView>

            <Label styleClass="titre-app" text="NetWok">
                <font>
                    <Font size="80.0" />
                </font>
                <effect>
                    <Glow level="0.8"/>
                </effect>
            </Label>

            <Label fx:id="nomsEquipe" styleClass="sous-titre" text="Matt CAZORLA, Louis DURAND, Ambre LAVAUD et Corentin DE ANGELIS"
                   textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Consolas" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets top="-10.0" bottom="20.0" />
                </VBox.margin>
            </Label>

            <Button fx:id="btnCommencer" mnemonicParsing="false" onAction="#commencerCommande" 
                    styleClass="btn-action" text="APPUYER POUR COMMENCER">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Button>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" top="10.0"/>
            </padding>
            <Label fx:id="languageDisplay" />
            <Button alignment="CENTER" mnemonicParsing="false" text="FR" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/fr.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat;-fx-background-position: center;-fx-background-radius: 25;-fx-border-radius: 25;-fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0';-fx-text-fill: white; -fx-font-weight: bold;-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 3, 0, 0, 0);"/>
            <Button alignment="CENTER" mnemonicParsing="false" text="EN" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/gb.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="中文" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/cn.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="日本語" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/jp.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="ES" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/es.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="PY" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/ru.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="ไทย" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/th.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
            <Button alignment="CENTER" mnemonicParsing="false" text="한국말" onAction="#changeLanguage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-image: url('https://flagcdn.com/w80/kr.png'); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center; -fx-background-radius: 25; -fx-border-radius: 25; -fx-shape: 'M 25, 25 m -25, 0 a 25,25 0 1,0 50,0 a 25,25 0 1,0 -50,0'; -fx-text-fill: transparent;" />
        </HBox>
    </bottom>

</BorderPane>